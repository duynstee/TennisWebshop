@using Microsoft.AspNetCore.Http.Features   
@using Logic
@model System.Collections.Generic.List<Logic.Product> 
@{
    ViewBag.Title = "Index";
    List<ProductViewModel> products = ViewBag.Product;
}

<table class="table table-bordered table-striped">
    <tr>
        <th>Name</th>
        <th>Size</th>
        <th>Price</th>
        <th>Stock Quantity</th>
        <th>Description</th>
        <th>Add</th>
    </tr>
    @foreach (var product in products)
     {
        <tr>
            <td>@product.ProductName</td>
            <td>@product.Size</td>
            <td>@product.Price</td>
            <td>@product.Quantity</td>
            <td>@product.Description</td>
            <td><a asp-controller="Product" asp-action="AddToOrder" asp-route-id="@product.ProductId">Add to order</a></td>
        </tr>
     }
</table>
